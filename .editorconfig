# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = false

# Use 4 spaces for the Python files
[*.py]
indent_size = 4
# max_line_length = 80

# Use tabs for the Bash/Shell scripts
[*.sh]
indent_style = tab

# Use tabs for the plain text files
[*.txt]
indent_style = tab

# Makefiles always use tabs for indentation
[{Makefile,makefile}]
indent_style = tab
